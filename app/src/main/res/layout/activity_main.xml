<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/new_reminder"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="187dp"
        android:layout_height="177dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        android:onClick="onNewReminderClick"
        android:text="New Reminder"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/reminder_data"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/reminder_data"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="187dp"
        android:layout_height="177dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="160dp"
        android:fontFamily="sans-serif-black"
        android:onClick="onReminderDataClick"
        android:text="Reminder Data"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cycling_data"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="187dp"
        android:layout_height="177dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="160dp"
        android:fontFamily="sans-serif-black"
        android:onClick="onCyclingDataClick"
        android:text="Cycling Data"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@android:color/holo_orange_light"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="GeoCyclist"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/cycling_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/new_cycle"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="187dp"
        android:layout_height="177dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-black"
        android:onClick="onCycleClick"
        android:text="New Cycle"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/cycling_data"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>